<% [:info, :success, :danger, :warning, :alert, :notice].each do |key| %>
  <% unless flash[key].blank? %>
    <div class="<%= flash_class(key) %> alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= flash[key]%>
    </div>
  <% end %>
<% end %>
